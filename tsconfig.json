  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "bundler",  // Change this line
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,  // Enable this option
    "noEmit": true , // OR "emitDeclarationOnly": true
    "declaration": true,                // Generate .d.ts files
    "declarationDir": "./dist/types",   // Output directory for .d.ts files
    "outDir": "./dist"
  },
  "include": ["src","src/types" ]

  }
  